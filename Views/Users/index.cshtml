@model Ex002.Models.Users

<div class="container">
  <h2>Exercicio 2</h2>
  <form method="POST" asp-controller="Users" asp-action="Details" asp-action="Data">
    <div class="form-group">
      <label for="nome">Nome:</label>
      <input type="text" class="form-control" id="Nome" placeholder="Digite seu Nome" name="nome">
    </div>
    <div class="form-group">
      <label for="data">Data de Nascimento:</label>
      <input type="date" class="form-control" id="data" placeholder="Digite sua data de Nasicmento" name="data">
    </div>
    <div class="form-group">
      <label for="altura">Altura</label>
      <input type="float" class="form-control" id="altura" placeholder="Digite sua Altura" name="altura">
    </div>
    <div class="form-group">
      <label for="peso">Peso:</label>
      <input type="number" class="form-control" id="peso" placeholder="Digite seu Peso" name="peso">
    </div>
    <button type="submit" class="btn btn-primary">Salvar</button>
  </form>
</div>
